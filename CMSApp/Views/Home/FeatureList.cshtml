@model IEnumerable<CMSApp.Models.FEATURE>

@{
    ViewBag.Title = "FeatureList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FeatureList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FEATURE_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FEATURE_PATH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SEQ)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FEATURE_NAME)
        </td>
        <td>
            <img src="@Url.Content(item.FEATURE_PATH)" border="0" width="100" height="100"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SEQ)
        </td>
        <td>
            @Html.ActionLink("Edit", "FeatureAdd", new { id=item.ID }) |
            @Html.ActionLink("Delete", "FeatureDelete", new { id=item.ID })
        </td>
    </tr>
}

</table>
